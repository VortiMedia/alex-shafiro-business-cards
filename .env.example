# =============================================================================
# Google AI and Cloud Configuration
# =============================================================================

# Required: Google Generative AI API Key
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Required: Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=business-card-designer-2025

# Optional: Google Cloud Region (default: us-central1)
GOOGLE_CLOUD_LOCATION=us-central1

# =============================================================================
# Application Settings
# =============================================================================

# Output directory for generated cards (default: ./output)
OUTPUT_DIRECTORY=./output

# Enable caching to reduce API costs (default: true)
ENABLE_CACHING=true

# Cache directory (default: ./.cache)
CACHE_DIRECTORY=./.cache

# Maximum generations per day (cost control)
MAX_GENERATIONS_PER_DAY=50

# Daily budget limit in USD (default: 25.00)
DAILY_BUDGET_LIMIT=25.00

# =============================================================================
# Model Configuration
# =============================================================================

# Primary model for image generation
GEMINI_MODEL=gemini-2.5-flash-image-preview

# Fallback model if primary fails
FALLBACK_MODEL=gemini-2.0-flash-thinking-exp

# Generation temperature (0.0-1.0, default: 0.7)
GENERATION_TEMPERATURE=0.7

# Maximum tokens per request (default: 4000)
MAX_TOKENS=4000

# =============================================================================
# Quality and Performance Settings
# =============================================================================

# Default image resolution (DPI)
DEFAULT_DPI=300

# Image format for output (PNG, JPEG, WEBP)
OUTPUT_FORMAT=PNG

# Image quality (1-100 for JPEG)
IMAGE_QUALITY=95

# Enable parallel processing
ENABLE_PARALLEL=true

# Number of concurrent generations (default: 4)
CONCURRENT_GENERATIONS=4

# =============================================================================
# Analytics and Tracking (Optional)
# =============================================================================

# Google Tag Manager Container ID
GTM_CONTAINER_ID=

# Enable usage tracking
ENABLE_TRACKING=false

# Analytics endpoint
ANALYTICS_ENDPOINT=

# =============================================================================
# Development Settings
# =============================================================================

# Debug mode (default: false)
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/business_card_designer.log

# Enable verbose logging
VERBOSE_LOGGING=false

# =============================================================================
# Security Settings
# =============================================================================

# API rate limiting (requests per minute)
RATE_LIMIT=60

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum file size for uploads (MB)
MAX_UPLOAD_SIZE=10

# Allowed file extensions
ALLOWED_EXTENSIONS=png,jpg,jpeg,webp,svg,pdf

# =============================================================================
# Business Logic Settings
# =============================================================================

# Default card dimensions (inches)
DEFAULT_CARD_WIDTH=3.5
DEFAULT_CARD_HEIGHT=2.0

# Default bleed size (inches)
DEFAULT_BLEED=0.125

# Default safe zone margin (inches)
DEFAULT_SAFE_ZONE=0.25

# Service area validation
ENABLE_SERVICE_AREA_VALIDATION=true

# Valid service area codes (comma-separated)
SERVICE_AREA_CODES=CT,NY,NJ,RI

# =============================================================================
# Email and Notifications (Optional)
# =============================================================================

# SMTP settings for notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Notification email addresses
ADMIN_EMAIL=
ERROR_NOTIFICATION_EMAIL=

# =============================================================================
# Database Settings (Optional)
# =============================================================================

# Database URL (if using database storage)
DATABASE_URL=

# Redis URL (if using Redis for caching)
REDIS_URL=

# =============================================================================
# Web Server Settings (Optional)
# =============================================================================

# Web server port
WEB_SERVER_PORT=8000

# Web server host
WEB_SERVER_HOST=0.0.0.0

# Enable CORS
ENABLE_CORS=true

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Integration Settings
# =============================================================================

# Formspree form ID (for contact forms)
FORMSPREE_FORM_ID=

# Webhook URL for notifications
WEBHOOK_URL=

# External API keys
EXTERNAL_API_KEY=

# =============================================================================
# Feature Flags
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable A/B testing
ENABLE_AB_TESTING=false

# Enable advanced prompt engineering
ENABLE_ADVANCED_PROMPTING=true

# Enable batch processing
ENABLE_BATCH_PROCESSING=true

# Enable version control for designs
ENABLE_VERSION_CONTROL=true